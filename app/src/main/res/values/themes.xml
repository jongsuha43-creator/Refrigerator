<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodRecipe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FoodRecipe" parent="Base.Theme.FoodRecipe" />

    <!-- 2. 새로운 SplashScreen API를 위한 전용 테마 -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- 스플래시 화면의 배경색을 지정합니다. -->
        <item name="windowSplashScreenBackground">#1A1A1A</item>

        <!-- 스플래시 화면 중앙에 표시될 아이콘(로고)을 지정합니다. -->
        <!-- drawable 에 splash_icon 으로 사용 (크키 조정하게 함) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>

        <!-- 스플래시 화면이 끝난 후 적용될 앱의 기본 테마를 지정합니다. -->
        <item name="postSplashScreenTheme">@style/Theme.FoodRecipe</item>

        
    </style>

</resources>